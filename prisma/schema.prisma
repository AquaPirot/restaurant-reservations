generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id            String   @id @default(cuid())
  name          String
  phone         String
  date          String   // YYYY-MM-DD format
  time          String   // HH:MM format
  guests        Int      // ukupan broj gostiju
  
  // Rođendan specifična polja
  adultsCount   Int?     // broj odraslih (samo za rođendane)
  childrenCount Int?     // broj dece (samo za rođendane)
  birthdayMenu  String?  // "780" ili "980" (samo za rođendane)
  
  tableNumber   Int?
  type          String   @default("standard") // "standard" ili "birthday"
  notes         String?  @db.Text
  createdBy     String   // ime osobe koja je zakazala
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([date, time])
  @@map("reservations")
}